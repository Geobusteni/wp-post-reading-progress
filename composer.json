{
  "name": "kulsite/wp-post-reading-progress",
  "description": "A plugin that show the reading progress on a WordPress page or post.",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "version": "0.1.1",
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/Angrycreative/composer-plugin-language-update.git"
    }
  ],
  "require": {
    "angrycreative/composer-plugin-language-update": "*"
  },
  "require-dev": {
    "dekode/coding-standards": ">=3.0.0"
  },
  "extra" : {
    "wordpress-languages": [ "nb_NO","sv_SE", "en_GB", "da_DK", "ro_RO" ],
    "wordpress-path-to-content-dir": "/languages"
  },
  "scripts": {
    "lint": [
      "@composer install",
      "./vendor/bin/phpcs"
    ],
    "post-package-install": [
      "AngryCreative\\PostUpdateLanguageUpdate::install_t10ns"
    ],
    "post-package-update": [
      "AngryCreative\\PostUpdateLanguageUpdate::update_t10ns"
    ]
  }
}
